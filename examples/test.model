function day_of_z z : int -> day = 
    match z with
    | 1 -> Monday
    | 2 -> Tuesday
    | 3 -> Wednesday
    | 4 -> Thursday
    | 5 -> Friday
    | 6 -> Saturday
    | _ -> Sunday

function is_sunday d : day -> bool= 
    d = Sunday

function is_int_sunday i : int -> bool = 
    match i with
    | 1 -> 
        let a = i;
        (is_sunday (day_of_z a)) || (is_sunday (day_of_z (a+1)))
    |_ -> 
        let (a,b) = (i,2);
        is_sunday (day_of_z a)

function fair1 z : int -> bool = 
    is_sunday (day_of_z z)

